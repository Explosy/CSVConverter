<Window x:Class="CSVConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVConverter"
        mc:Ignorable="d"
        Title="CSVConverter" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Height="20" Margin="10" Click="OpenCSVFile">Загрузить из CSV</Button>
            <Button Height="20" Margin="10" IsEnabled="False">Загрузить из XML</Button>
            <Button Height="20" Margin="10" IsEnabled="False">Загрузить из JSON</Button>
            <Button Height="20" Margin="10" IsEnabled="False">Диаграмма по странам</Button>
            <Button Height="20" Margin="10" IsEnabled="False">Сохранить в XML</Button>
            <Button Height="20" Margin="10" IsEnabled="False">Сохранить в Json</Button>
            <Button Height="20" Margin="10" IsEnabled="False">Экспорт в Excel</Button>
            <Button Height="20" Margin="10" IsEnabled="False">Отчёт в Word</Button>
        </StackPanel>
        <DataGrid Grid.Column="1" x:Name="dataGrid"/>
    </Grid>
</Window>
